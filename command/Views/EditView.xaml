<Window x:Class="command.Views.EditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:command.Views"
        mc:Ignorable="d"
        Title="EditView" Height="450" Width="800">
    <StackPanel>
        <Label FontSize="32">Vendor</Label>
        <TextBox
            FontSize="32"
            Foreground="Blue"
            Text="{Binding Car.Vendor}" />
        <Label FontSize="32">Model</Label>
        <TextBox
            FontSize="32"
            Foreground="Blue"
            Text="{Binding Car.Model}" />
        <Label FontSize="32">Year</Label>
        <TextBox
            FontSize="32"
            Foreground="Blue"
            Text="{Binding Car.Year}" />
        <Button
            Margin="20"
            Command="{Binding SaveCommand}"
            FontSize="32">
            Save
        </Button>
    </StackPanel>
</Window>
